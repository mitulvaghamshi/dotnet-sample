@page
@model DetailsModel

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>
<hr />

<div class="row">
    <dl class="col-md-6">
        <div class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Movie.Title)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Movie.Title)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Movie.Genre)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Movie.Genre)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Movie.Rating)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Movie.Rating)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Movie.DateSeen)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Movie.DateSeen)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Movie.ImageFile)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Movie.ImageFile)
            </dd>
        </div>
        <div class="form-group mt-3">
            <a asp-page="./Edit" asp-route-id="@Model.Movie.Id" class="btn btn-success">Edit</a>
            <a asp-page="Index" class="btn btn-outline-light">Back to List</a>
        </div>
    </dl>
    <div class="col-md-6 text-end">
        <figure>
            <img src="~/img/@Model.Movie.ImageFile" height="500" class="rounded-4" />
        </figure>
    </div>
</div>
