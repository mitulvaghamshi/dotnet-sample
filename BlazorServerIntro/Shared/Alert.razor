<div class="alert @AlertBg m-0">
    <div class="d-flex justify-content-between align-items-center">
        <div>
            @if (!string.IsNullOrEmpty(OiIcon))
            {
                <span class="oi @OiIcon me-2" aria-hidden="true"></span>
            }
            <strong>@Title</strong>
            @if (!string.IsNullOrEmpty(Description))
            {
                <span class="text-nowrap"> @Description</span>
            }
        </div>
        <span role="button" class="btn btn-close" @onclick="Hide"></span>
    </div>
</div>

@code {
    [Parameter]
    public string? OiIcon { get; set; }

    [Parameter]
    public string? AlertBg { get; set; } = "alert-secondary";

    [Parameter]
    public string? Title { get; set; } = "Usage: <Alert Title=\"Alert title\" OiIconName=\"oi-plus\" AlertCssClass=\"alert-success\" />";

    [Parameter]
    public string? Description { get; set; }

    private void Hide()
    {
        AlertBg = "visually-hidden";
    }
}
