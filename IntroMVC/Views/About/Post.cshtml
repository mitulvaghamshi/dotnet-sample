@* About Controller/Post *@

@{
	Layout = "_Layout";
	var id = ViewBag.id;
}

<h1>Hello, Your ID: @id</h1>

<p>Last seen: @(DateTime.Now - TimeSpan.FromDays(5))</p>

<h5>Month this year:</h5>
<ul class="container list-unstyled">
	@for (int i = 1; i <= 12; i++)
	{
		<li class="col-2 m-2 p-2 h5 rounded list-group-item-danger">
			@i: @(new DateTime(2023, i, 1).ToString("MMMM"))
		</li>
	}
</ul>
