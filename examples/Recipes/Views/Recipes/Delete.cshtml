@model Recipes.Models.Recipe

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete @Model.Name</h1>

<h3>Are you sure you want to delete this?</h3>
<hr />

<div class="row">
    <div class="col-6">

        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Name)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Name)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Category)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Category.Name)
            </dd>
        </dl>
        <form asp-action="Delete" class="my-3">
            <input type="hidden" asp-for="Id" />
            <input type="submit" value="Delete" class="btn btn-danger me-2" />
            <a asp-action="Index" class="btn btn-outline-light">Back to List</a>
        </form>
    </div>
    <figure class="col-6 figure-img">
        <img src="@Model.Image" class="rounded-4 card-img" alt="@Model.Image" />
    </figure>
</div>
