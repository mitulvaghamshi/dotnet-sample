@model ErrorViewModel
@{
    ViewData["Title"] = "Error";
}

<h3 class="text-danger">Something went Wrong 😱</h3>

<h5>An error occurred while processing your request.</h5>

@if (Model.ShowRequestId)
{
    <p><strong>Request ID:</strong> @Model.RequestId</p>
}

<p><strong>Cause: </strong> @Model.Description</p>